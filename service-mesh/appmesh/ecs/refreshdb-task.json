{
  "family": $NAME,
  "proxyConfiguration":{
    "type": "APPMESH",
    "containerName": "envoy",
    "properties": [
      {
        "name": "IgnoredUID",
        "value": "1337"
      },
      {
        "name": "ProxyIngressPort",
        "value": "15000"
      },
      {
        "name": "ProxyEgressPort",
        "value": "15001"
      },
      {
        "name": "AppPorts",
        "value": "5008"
      },
      {
        "name": "EgressIgnoredPorts",
        "value": "9080"
      },
      {
        "name": "EgressIgnoredIPs",
        "value": "169.254.170.2,169.254.169.254"
      }
    ]
  },
  "volumes": [
    {
      "name": "hostfs",
      "host": {
        "sourcePath": "/"
      }
    },
    {
      "name": "docker-socket",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "config-volume",
      "image": $CONFIG_IMAGE,
      "essential": false,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": $ECS_SERVICE_LOG_GROUP,
          "awslogs-region": $AWS_REGION,
          "awslogs-stream-prefix": "api-config"
        }
      }
    },
    {
      "name": "app",
      "image": $APP_IMAGE,
      "portMappings": [
        {
          "containerPort": 5008,
          "hostPort": 5008,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SIGNALFX_SERVICE_NAME",
          "value": "refreshdb"
        },
        {
          "name": "SIGNALFX_ENDPOINT_URL",
          "value": $SIGNALFX_ENDPOINT_URL
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": $ECS_SERVICE_LOG_GROUP,
          "awslogs-region": $AWS_REGION,
          "awslogs-stream-prefix": $AWS_LOG_STREAM_PREFIX_APP
        }
      },
      "essential": true,
      "dependsOn": [
        {
          "containerName": "envoy",
          "condition": "HEALTHY"
        }
      ]
    },
    $ENVOY_CONTAINER_JSON
  ],
  "taskRoleArn": $TASK_ROLE_ARN,
  "executionRoleArn": $EXECUTION_ROLE_ARN,
  "networkMode": "awsvpc",
  "memory": "256"
}
